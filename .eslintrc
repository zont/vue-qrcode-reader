{
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "no-console": 0,
    "no-var": 2,
    "prefer-const": ["error", { "destructuring": "all" }],
    "prefer-template": 2,
    "prefer-spread": 2,
    "prefer-rest-params": 2,
    "eqeqeq": 2,
    "no-alert": 2,
    "no-multi-spaces": 2,
    "no-unused-expressions": 2,
    "no-tabs": 2,
    "sort-imports": 1
  }
}
